{
  "dashboard": {
    "id": null,
    "title": "ML API Monitoring Dashboard",
    "tags": ["ml", "api", "housing"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Prediction Requests Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(prediction_requests_total[5m])",
            "legendFormat": "{{endpoint}} - {{model_version}}"
          }
        ],
        "xAxis": {
          "show": true
        },
        "yAxes": [
          {
            "label": "Requests/sec",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Prediction Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(prediction_duration_seconds_sum[5m]) / rate(prediction_duration_seconds_count[5m])",
            "legendFormat": "Average Latency - {{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(prediction_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Total Predictions",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(prediction_requests_total)",
            "legendFormat": "Total Predictions"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 16,
    "version": 1
  }
}